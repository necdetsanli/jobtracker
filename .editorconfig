root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

###############################################################################
# C / C++ source and headers
###############################################################################
[*.{c,cc,cpp,cxx,h,hh,hpp}]
indent_style = tab
indent_size = tab

# Keep tabs for C/C++ code, as described in STYLE.md:
# - One tab per indentation level
# - Opening brace on the next line

###############################################################################
# CMake files
###############################################################################
[CMakeLists.txt]
indent_style = tab
indent_size = tab

[*.cmake]
indent_style = tab
indent_size = tab

###############################################################################
# Scripts (shell, Python)
###############################################################################
[*.sh]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

###############################################################################
# JSON, YAML, TOML (config files)
###############################################################################
[*.{json,yml,yaml,toml}]
indent_style = space
indent_size = 2

###############################################################################
# Markdown / documentation
###############################################################################
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Reason: in Markdown, trailing spaces can be meaningful (hard line breaks),
# so we do not strip them automatically.
